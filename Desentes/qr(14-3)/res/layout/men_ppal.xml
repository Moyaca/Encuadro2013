<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenPpal" >

    <Button
        android:id="@+id/btnEscO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="81dp"
        android:background="@drawable/btn_animation"
        android:text="Obras"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnEscS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnEscO"
        android:layout_alignRight="@+id/btnEscO"
        android:layout_below="@+id/btnEscO"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_animation"
        android:text="Salas"
        android:textSize="30sp" />

</RelativeLayout>